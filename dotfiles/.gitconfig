[core]
  editor = nvim
  ignorecase = false
  excludesfile = ~/.gitignore
  preloadindex = true
  fscache = true
	autocrlf = input
	filemode = false
[gc]
  auto = 256
[filter "lfs"]
  required   = true
  clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[user]
  name   = Niko Heikkil√§
	email = niko.heikkila@futurice.com
  useconfigonly = true
[color]
  branch  = auto
  diff    = auto
  status  = auto
  ui      = always
[color "branch"]
  current = red reverse
  local   = blue
  remote  = green
[color "diff"]
  meta    = yellow
  frag    = magenta
  old     = red bold
  new     = green
  plain   = white
[color "status"]
  added       = yellow
  changed     = green
  untracked   = cyan
[pager]
  diff = diff-so-fancy | bat
	show = diff-so-fancy | bat
[fetch]
  prune = true
  prunetags = true
[push]
  default = current
  followTags = true
[pull]
  rebase = true
  default = current
[diff]
  tool = default-difftool
  mnemonicprefix = true
  algorithm = histogram
[difftool "default-difftool"]
  cmd = code --diff $LOCAL $REMOTE
  prompt = false
[branch]
  autosetuprebase = always
[apply]
  whitespace = nowarn
[rerere]
  enabled = true
[rebase]
  autosquash = true
  autostash = true
  missingCommitsCheck = error
  updateRefs = true
[alias]
  configure = "config --global -e"
  lg = "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --no-merges"
[commit]
  gpgsign = false
  verbose = true
[http]
	sslVerify = true
[init]
	defaultBranch = main
[merge]
  conflictStyle = zdiff3
[include]
  path = ~/.gitconfig.local
[gpg "ssh"]
	allowedSignersFile = /Users/niko.heikkila/.ssh/allowed_signers
[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[includeIf "gitdir/i:~/src/github.com/accountor/"]
  path = ~/.gitconfig-accountor

