[core]
    editor = nvim
    ignorecase = false
    excludesfile = ~/.gitignore
    preloadindex = true
    fscache = true
	autocrlf = input
	filemode = false
[gc]
    auto = 256
[filter "lfs"]
    required   = true
    clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[user]
    name   = Niko Heikkil√§
	email = niko.heikkila@futurice.com
    useconfigonly = true
[color]
    branch  = auto
    diff    = auto
    status  = auto
    ui      = always
[color "branch"]
    current = red reverse
    local   = blue
    remote  = green
[color "diff"]
    meta    = yellow
    frag    = magenta
    old     = red bold
    new     = green
    plain   = white
[color "status"]
    added       = yellow
    changed     = green
    untracked   = cyan
[pager]
    diff = diff-so-fancy | bat
	show = diff-so-fancy | bat
[push]
    default = current
    followTags = true
[pull]
    rebase = true
    default = current
[diff]
    tool = default-difftool
    mnemonicprefix = true
[difftool "default-difftool"]
    cmd = code --diff $LOCAL $REMOTE
    prompt = false
[branch]
    autosetuprebase = always
[apply]
    whitespace = nowarn
[rerere]
    enabled = false
[rebase]
    autosquash = true
[alias]
    bclean = "!git branch --merged | grep -v 'main' | xargs git branch -D"
    done = "!git reset --soft $(git history)"
    edit = "config --global -e"
    history = "!git log --oneline --pretty='%h %s' | fzf --preview='git show --color=always {+1} | diff-so-fancy' | cut -d ' ' -f 1"
    lg = "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --no-merges"
    rb = "!git rebase -i $(git history)"
    goal = "!git commit --allow-empty --no-verify -m \"$1\" #"
    save = "!git add -A && git commit --no-verify -m 'quicksave'"
    load = "!git checkout . && git clean -df"
    stats = "shortlog -s -n --all --no-merges"
[commit]
    gpgsign = false
[http]
	sslVerify = true
[init]
	defaultBranch = main
